int Find_Minimum(TreeNode *root)
{
    if(root==NULL)
    {
        return 0;
    }
    else if(root->left==NULL && root->right==NULL)
    {
        return 1;
    }
    else if(root->left==NULL)
    {
        return Find_Minimum(root->right)+1;
    }
    else if(root->right==NULL)
    {
        return Find_Minimum(root->left)+1;
    }
    int left_height=Find_Minimum(root->left);
    int right_height=Find_Minimum(root->right);
    return min(left_height, right_height)+1;
}
int minDepth(TreeNode* root) 
{
    return Find_Minimum(root);
}
